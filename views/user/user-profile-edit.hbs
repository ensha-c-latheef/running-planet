<div id="form">
  <h2>Edit Profile</h2>
  <form action="/user/profile/edit" method="POST">

    <label>
      Name:
      <input type="text" name="name" value="{{userToEdit.name}}" />
    </label>

    <label>
      Surname
      <input type="text" name="surname" placeholder="Your surname" value="{{userToEdit.surname}}"/>
    </label>

    <label>
      Birthdate
      <input type="date" name="birthdate" value="{{userToEdit.birthdate}}" />
    </label>


    <label>
      Gender
      <select name="gender" value=" " placeholder="Gender">
        <option value="">select gender</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </label>
    <button type="submit">Submit</button>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}

  </form>
</div>