<h1>
  My Profile
</h1>
<hr />
<p>Full name:</p>
<h3>{{userDetails.name}}{{userDetails.surname}}</h3>

<p>Date of Birth:</p>
<h3>{{showDate userDetails.birthdate}}</h3>

<p>Gender:</p>
<h3>{{userDetails.gender}}</h3>

<hr />

<a href="/user/profile/edit"><button>Edit Profile</button></a>

<h2>My favourites:</h2>

{{#each userDetails.favourite}}
  <div>

    <img
      src="{{imageUrl}}"
      class="card-img-top"
      height="200px"
      alt="{{name}}"
    />
    <h3><a href="/event/{{_id}}">{{name}}</a></h3>

    <form action="/user/profile/no-fav-event" method="post">
      <input type="text" name="event" hidden value="{{_id}}" />
      <button type="submit">Remove from favourites</button>
    </form>

    {{!-- <p>{{location}}</p>
    <p>{{distance}}</p>
    <p><a href={{website}}>{{website}}</a></p> --}}

  </div>
{{/each}}