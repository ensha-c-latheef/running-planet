<div id="form">
  <h2>Edit "{{name}}" event</h2>
  <form action="/event/{{id}}/edit" method="POST" enctype="multipart/form-data">

    <label>
      Name:
      <input type="text" name="name" value="{{name}}" />
    </label>

    <label>
      Date:
      <input type="date" value="{{date}}" name="date" />
    </label>

    <label>
      Location:
      <input type="text" name="location" value="{{location}}" />
    </label>

    <label>
      Distance:
      <select name="distance">
        <option value="">select distance</option>
        <option value="5k">5k</option>
        <option value="10k">10k</option>
        <option value="half-marathon">Half Marathon</option>
        <option value="marathon">Marathon</option>
      </select>
    </label>

    <label>
      Description:
      <textarea name="description" cols="30" rows="4">{{description}}
      </textarea>
    </label>

    <label>
      Website:
      <input type="text" name="website" value="{{website}}" />
    </label>

    <label>Image:
      <input type="file" name="event-cover-image" />
      <input type="text" name="existingImage" hidden value="{{imageUrl}}" />
    </label>

    <button type="submit">Edit</button>
    <a href="/event/{{id}}">Go Back</a>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}

  </form>
</div>