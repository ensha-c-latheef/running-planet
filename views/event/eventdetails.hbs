<h1>{{newEvent.name}}</h1>
<hr />
<p>{{event.date}}</p>
<p>{{event.location}}</p>
<p>{{event.distance}}</p>
<p>{{event.description}}</p>
<p><a href={{event.website}}>{{event.website}}</a></p>
<img src="{{event.imageUrl}}" class="card-img-top" alt="{{name}}" />

<a href="/event/{{event.id}}/edit">Edit</a>

<form action="/event/{{event.id}}/edit" method="post">
  <button type="submit">Edit</button>
</form>
<form action="/event/{{event.id}}/delete" method="post">
  <button type="submit">Delete</button>
</form>

